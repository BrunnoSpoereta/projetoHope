<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="projetoHope.Views.PgCadastroView"
             Title="PgCadastroView" BackgroundColor="#1b2443">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="6">
            <Label Text="Usuario" />
            <Entry x:Name="txtUsuario" Placeholder="Nome de Usuario" />
            <Label x:Name="valUsuario" TextColor="Red" FontSize="12" IsVisible="False" />

            <Label Text="Senha" />
            <Entry x:Name="txtSenha" Placeholder="Senha"/>
            <Label x:Name="valSenha" TextColor="Red" FontSize="12" IsVisible="False" />

            <HorizontalStackLayout Margin="0,10,0,0" Spacing="8" VerticalOptions="Center">
                <CheckBox x:Name="chkAdmin" Color="#98b1ce" />
                <Label Text="Ã‰ administrador?" TextColor="White" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <Grid ColumnDefinitions="*,*" Margin="0,12,0,0">
                <Button Text="Cadastrar"   Clicked="btnCadastrarClicked"   Grid.Column="0" BackgroundColor="#98b1ce"/>
                <Button Text="Voltar" Clicked="btnVoltarClicked" Grid.Column="1" BackgroundColor="#98b1ce"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>